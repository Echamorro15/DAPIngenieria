@model DAPIngenieria.Models.TipoServicios

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Registrar Tipo de Servicio</h1>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-4 shadow-sm">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="IdTipoServicio" class="control-label"></label>
                        <input asp-for="IdTipoServicio" class="form-control" value="@ViewBag.SiguienteId" />
                        <span asp-validation-for="IdTipoServicio" class="text-danger"></span>
                    </div>
                                     
                    <div class="form-group mb-3">
                        <label asp-for="DesTipoServicio" class="control-label"></label>
                        <input asp-for="DesTipoServicio" class="form-control" />
                        <span asp-validation-for="DesTipoServicio" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Guardar" class="btn btn-primary btn-lg" />
                    </div>
                </form>

                <div class="form-group text-center mt-3">
                    <a asp-action="Index" class="btn btn-link">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
