@model DAPIngenieria.Models.TipoServicios

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Detalles del Tipo de Servicio</h1>

<div>
    <hr />
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-4 shadow-sm">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.DesTipoServicio)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DesTipoServicio)
                        </dd>
                    </dl>

                    <div class="form-group text-center">
                        <a asp-action="Edit" asp-route-id="@Model?.IdTipoServicio" class="btn btn-warning btn-sm">Editar</a>
                    </div>

                    <div class="form-group text-center mt-3">
                        <a asp-action="Index" class="btn btn-link">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
