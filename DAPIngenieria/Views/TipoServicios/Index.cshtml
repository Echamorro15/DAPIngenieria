@model IEnumerable<DAPIngenieria.Models.TipoServicios>

<h1 class="text-center mb-3">Tipos de Servicios</h1>

<div class="mb-3 text-center">
    <a asp-action="Create" class="btn btn-primary btn-lg">Registar nuevo</a>
</div>

<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdTipoServicio</td>
                <td>@item.DesTipoServicio</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@item.IdTipoServicio" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdTipoServicio" class="btn btn-info btn-sm text-white">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdTipoServicio" class="btn btn-danger btn-sm">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
