@model DAPIngenieria.Models.TipoServicios

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Eliminar Tipo de Servicio</h1>


<div>
    <hr />
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-4 shadow-sm">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.DesTipoServicio)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DesTipoServicio)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdTipoServicio" />
                        <div class="form-group text-center">
                            <input type="submit" value="Eliminar" class="btn btn-danger btn-lg" />
                        </div>
                    </form>

                    <div class="form-group text-center mt-3">
                        <a asp-action="Index" class="btn btn-link">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
