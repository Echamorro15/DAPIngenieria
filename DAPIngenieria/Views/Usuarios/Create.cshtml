@model DAPIngenieria.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Registrar Usuario</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="card p-4 shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" placeholder="Id de Usuario" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NombreUsuario" class="control-label"></label>
                <input asp-for="NombreUsuario" class="form-control" placeholder="Nombre de Usuario" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Contraseña" class="control-label"></label>
                <input asp-for="Contraseña" class="form-control" placeholder="Contraseña" type="password" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Rol)
                @Html.DropDownListFor(m => m.Rol, new SelectList(new[] { "Gerencial", "Técnico" }), "Seleccione un Rol", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Rol)
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Guardar" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-link">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

