@model DAPIngenieria.Models.Servicio

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Servicio</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdServicio" />
            <div class="form-group">
                <label asp-for="IdOrden" class="control-label"></label>
                <select asp-for="IdOrden" class="form-control" asp-items="ViewBag.IdOrden"></select>
                <span asp-validation-for="IdOrden" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoServicio" class="control-label"></label>
                <select asp-for="IdTipoServicio" class="form-control" asp-items="ViewBag.IdTipoServicio"></select>
                <span asp-validation-for="IdTipoServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DesServicio" class="control-label"></label>
                <input asp-for="DesServicio" class="form-control" />
                <span asp-validation-for="DesServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaProx" class="control-label"></label>
                <input asp-for="FechaProx" class="form-control" />
                <span asp-validation-for="FechaProx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioCreador" class="control-label"></label>
                <input asp-for="UsuarioCreador" class="form-control" />
                <span asp-validation-for="UsuarioCreador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
