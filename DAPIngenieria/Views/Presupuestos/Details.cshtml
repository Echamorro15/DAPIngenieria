 @model DAPIngenieria.Models.Presupuesto

@{
    ViewData["Title"] = "Detalles de Presupuesto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">Detalles de Presupuesto</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-4 shadow-sm">
                <dl class="row">
                    <dt class="col-sm-4">Cliente</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdCliente)</dd>

                    <dt class="col-sm-4">Fecha de Creación</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaCreacion)</dd>

                    <dt class="col-sm-4">Fecha de Vencimiento</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaVencimiento)</dd>

                    <dt class="col-sm-4">Tipo de Servicio</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdTipoServicio)</dd>

                    <dt class="col-sm-4">Estado</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>

                    <dt class="col-sm-4">Descripción</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                    <dt class="col-sm-4">Cantidad</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cantidad)</dd>

                    <dt class="col-sm-4">Monto Unitario</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MontoUnitario)</dd>

                    <dt class="col-sm-4">Monto Total</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MontoTotal)</dd>

                    <dt class="col-sm-4">Usuario Creador</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UsuarioCreador)</dd>
                </dl>

                <div class="text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.IdPresupuesto" class="btn btn-warning btn-lg">Editar</a>
                    <a asp-action="Index" class="btn btn-link btn-lg">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
