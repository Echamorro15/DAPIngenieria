@model DAPIngenieria.Models.Cliente

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Detalles del Cliente</h1>

<div>
    <hr />
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-4 shadow-sm">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.RUC)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.RUC)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.RazonSocial)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.RazonSocial)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Telefono)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Telefono)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Ciudad)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Ciudad)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Departamento)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Departamento)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Pais)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Pais)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.FechaRegistro)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.FechaRegistro)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.UsuarioCreador)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.UsuarioCreador)
                        </dd>
                    </dl>

                    <div class="form-group text-center mt-3">
                        <a asp-action="Edit" asp-route-id="@Model?.IdCliente" class="btn btn-warning btn-sm">Editar</a>
                    </div>

                    <div class="form-group text-center mt-3">
                        <a asp-action="Index" class="btn btn-link">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
