@model IEnumerable<DAPIngenieria.Models.OrdenTrabajo>

@{
    ViewData["Title"] = "Orden de Trabajo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">Orden de Trabajo</h1>

<p class="text-center mb-3">
    <a asp-action="Create" class="btn btn-primary btn-lg">Crear Nueva Orden</a>
</p>

<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.IdOrden)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaInicio)</th>
                    <th>@Html.DisplayNameFor(model => model.IdCliente)</th>
                    <th>@Html.DisplayNameFor(model => model.IdPresupuesto)</th>
                    <th>@Html.DisplayNameFor(model => model.IdTipoServicio)</th>
                    <th>@Html.DisplayNameFor(model => model.DesOrden)</th>
                    <th>@Html.DisplayNameFor(model => model.IdEmpleado)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdOrden</td>
                        <td>@item.FechaCreacion.ToShortDateString()</td>
                        <td>@item.FechaInicio.ToShortDateString()</td>
                        <td>@item.IdCliente</td>
                        <td>@item.IdPresupuesto</td>
                        <td>@item.IdTipoServicio</td>
                        <td>@item.DesOrden</td>
                        <td>@item.IdEmpleado</td>
                        <td>
                            <div class="d-flex gap-2 justify-content-center">
                                <a asp-action="Edit" asp-route-id="@item.IdOrden" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.IdOrden" class="btn btn-info btn-sm text-white">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.IdOrden" class="btn btn-danger btn-sm">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

