@model DAPIngenieria.Models.OrdenTrabajo

@{
    ViewData["Title"] = "Eliminar Orden de Trabajo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">Eliminar Orden de Trabajo</h1>

<div class="container">
    <div class="card p-4 shadow-sm">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FechaCreacion)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.FechaInicio)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FechaInicio)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.IdCliente)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdCliente)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.IdPresupuesto)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdPresupuesto)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.IdTipoServicio)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdTipoServicio)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DesOrden)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DesOrden)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.IdEmpleado)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdEmpleado)
            </dd>
        </dl>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdOrden" />
            <input type="submit" value="Eliminar" class="btn btn-danger btn-lg" />
        </form>
        <div class="mt-3">
            <a asp-action="IndexOrden" class="btn btn-link btn-lg">Volver a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
